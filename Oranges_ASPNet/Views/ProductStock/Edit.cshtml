@using Oranges_ASPNet.Data.Enum
@using Oranges_ASPNet.Models.ViewModel
@model ProductStockViewModel

@{
	ViewData["Title"] = "Edit";
}

<div class="row text">
	<div class="mb-3 col-md-8 offset-2">
		<h1>Edit book</h1>
	</div>
	<div class="col-md-8 offset-2">
		<div class="row">
			<div class="col-md-6 mt-3">
				<form asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-floating mb-3">
                        <input type="hidden" asp-for="ImgUrl" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ImgUrl)" />
                        <label asp-for="ImgUrl"></label>
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>
					<div class="form-floating mb-3">
						<input asp-for="Brand" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Brand)" readonly/>
						<label asp-for="Brand"></label>
						<span asp-validation-for="Brand" class="text-danger"></span>
					</div>
                    <div class="form-floating mb-3">
						<input asp-for="Product" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Product)" readonly/>
						<label asp-for="Product"></label>
						<span asp-validation-for="Product" class="text-danger"></span>
					</div>
                    <div class="form-floating mb-3">
						<input asp-for="Quantity" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Quantity)" />
						<label asp-for="Quantity"></label>
						<span asp-validation-for="Quantity" class="text-danger"></span>
					</div>
					<div>
						<input type="submit" value="Edit" class="btn btn-outline-success float-end" />
						<a asp-action="Index" class="btn btn-outline-primary">Back to list</a>
					</div>
				</form>
			</div>
			<div class="col-md-6">
				<div class="form-group text-center">
					<img src="@Model.ImgUrl" class="border-info" width="100%" />
				</div>
			</div>






		</div>
	</div>



</div>





@section Scripts{
	<script>

		$(document).ready(function() {
			var output = document.getElementById('PicturePreview');
			output.src = $("#ImgUrl").val();
		})



		$("#ImgUrl").on("change", function() {
			var output = document.getElementById('PicturePreview');
			output.src = $(this).val();
		})
	</script>
}