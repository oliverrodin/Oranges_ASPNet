@using Oranges_ASPNet.Data.Enum
@using Oranges_ASPNet.Models.ViewModel
@model BrandViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="section-grey">
    <div class="mb-3 col-md-8 offset-2">
        <h1>Edit Brand</h1>
    </div>
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                    <div class="form-floating mb-3">
                        <input asp-for="LogoUrl" class="form-control" placeholder="@Html.DisplayNameFor(model => model.LogoUrl)" />
                        <label asp-for="LogoUrl"></label>
                        <span asp-validation-for="LogoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Name)" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Country" class="form-control" style="height: fit-content;" placeholder="@Html.DisplayNameFor(model => model.Country)"></textarea>
                        <label asp-for="Country"></label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Address" class="form-control" style="height: fit-content;" placeholder="@Html.DisplayNameFor(model => model.Address)"></textarea>
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="submit" value="Edit" class="btn btn-outline-success float-end" />
                        <a asp-action="List" class="btn btn-outline-primary">Back to list</a>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="form-group text-center">
                    <img class="border-info" width="100%" id="PicturePreview" />
                </div>
            </div>






        </div>
    </div>



</div>





@section Scripts{
<script>

    $(document).ready(function() {
        var output = document.getElementById('PicturePreview');
        output.src = $("#LogoUrl").val();
    })



    $("#LogoUrl").on("change", function() {
        var output = document.getElementById('PicturePreview');
        output.src = $(this).val();
    })
</script>
}