@model Brand

@{
    ViewData["Title"] = "Delete";
}

<div class="section-grey">
    <div class="col-md-8 offset-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <left>
                            <h4>Are you sure you want to delete: @Model.Name</h4>
                        </left>
                    </div>
                </div>
                <div>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <img src="@Model.LogoUrl" width="100%" />
                    </div>
                    <div class="col-md-6">
                        <p class="card-text">
                            <b>Country: </b> @Model.Country
                        </p>
                        <p class="card-text">
                            <b>Address: </b> @Model.Address
                        </p>
                        <p class="card-text">
                            <b>Products: </b>
                            <ul>
                                @foreach (var item in Model.Products)
                                {
                                    <li>@item.Model</li>
                                }
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group align-bottom">

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="List">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>