<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Oranges_ASPNet</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Oranges_ASPNet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    

</head>
<body>
	<header >
		<div class="back-color">
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-brand m-0" style="height: 4rem;">
				<div class="container-fluid" id="container-polygon">
					<a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index"><img src="/Images/logo-white.png" alt="Logo" style="" height="35px;" /></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white"  asp-area="" asp-controller="Product" asp-action="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white"  asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                            </li>
							<li class="nav-item">
								<a class="nav-link text-white"  asp-area="" asp-controller="ContactUs" asp-action="Index">Contact</a>
							</li>

							@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
							{
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle text-white" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
										Management
									</a>
									<div class="dropdown-menu back-color" style="" aria-labelledby="dropdownMenuButton1">
										<a class="dropdown-item text-white" asp-controller="Product" asp-action="List"><i class="bi bi-camera-reels"></i> Products</a>
										<a class="dropdown-item text-white" asp-controller="Brand" asp-action="List"><i class="bi bi-headset"></i> Brands</a>
										<a class="dropdown-item text-white" asp-controller="ProductStock" asp-action="Index"><i class="bi bi-list"></i> Inventory</a>
										<a class="dropdown-item text-white" asp-controller="Campaign" asp-action="List"><i class="bi bi-list"></i> Campaigns</a>

									</div>
								</li>
							}
						</ul>



						<partial name="_Identity" />

						<ul class="navbar-nav">
							@await Component.InvokeAsync("ShoppingCartSummary")
						</ul>

					</div>
				</div>
			</nav>
		</div>
	</header>




	<div class="main-body" style="z-index: 0;">
		<main role="main" class="">
			@RenderBody()
		</main>
	</div>

	<footer class="footer text-muted back-color">
		<div class="container">
			&copy; 2022 - Oranges_ASPNet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
