@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager


@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>
    <a class="btn btn-outline-success my-2 sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{
    @*User profile section*@
    <li class="nav-item dropdown" style="list-style: none;">
        <a class="btn btn-outline-light dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown"
       aria-expanded="false">
            <i class="bi bi-person-badge"></i>
            Hello @userManager.GetUserName(User);
        </a>
        <div class="dropdown-menu text-white" style="background-color: #28b485;"aria-labelledby="profile-btn">

            <a class="dropdown-item text-white" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-list"></i> Orders
            </a>


            @if (User.IsInRole("Admin"))
            {

                <a class="dropdown-item text-white" asp-controller="Account" asp-action="Users">
                    <i class="bi bi-people"></i> Users
                </a>

            }
        </div>
    </li>

    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-light my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Log out
        </button>
    </form>
}



