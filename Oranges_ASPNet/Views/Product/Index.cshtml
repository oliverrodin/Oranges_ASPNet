@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of all products";
    var i = 1;
}



<partial name="_Hero" />

<div class="product-index-section">
    <div class="row">
        <h2 class="product-index-section-heading">Campaign</h2>
    </div>
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel carousel-dark slide w-25 m-auto" data-bs-ride="carousel">
            <div class="carousel-indicators">

                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>

                @foreach (var product in Model)
                {

                    if (product.ProductCampaignId != null)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-label="Slide @i"></button>
                        i++;
                    }
                }



            </div>
            <div class="carousel-inner">
                <div class="carousel-item active ">
                    <img src="Images/hero.jpg" class="d-block w-100 m-auto" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>First slide label</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                    </div>
                </div>
                @foreach (var product in Model)
                {
                    if (product.ProductCampaignId != null)
                    {
                        <div class="carousel-item">
                            <img src="@product.ImgUrl" class="d-block w-100 m-auto" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h6>@product.Brand.Name</h6>
                                <h5>@product.Model</h5>
                                <p>$@(product.Price - (product.Price * product.ProductCampaign.Discount / 100))</p>
                            </div>
                        </div>

                    }

                }

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="p-4"></div>
    <div class="row">
        <h2 class="product-index-section-heading">All products</h2>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-3 ">
                <div class="col-12  p-2 mb-4 box-shadow">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">

                        <img src="@product.ImgUrl" width="100%"/>
                    </a>
                    <div class="">
                        <h6>@product.Brand.Name</h6>
                        <h5>@product.Model</h5>
                        <p>$ @product.Price</p>
                    </div>
                </div>


            </div>
        }
    </div>
</div>



<script type="text/javascript">
    $('.carousel').carousel({
        interval: 2000
    })
</script>