@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of all products";
}





<div class="section-grey">
    <div class="container">
        <div class="row">
            <h2 class="product-index-section-heading m-auto">
                All products
            </h2>
            <div class="d-inline">
            </div>
            <form class="my-2 my-lg-0 m-auto d-flex" asp-controller="Product" asp-action="Filter" style="width: 50%;">
                <input name="searchString" type="text" class="form-control d-inline-block" placeholder="Search for a bag by name or brand..." aria-label="Bag name" aria-describedby="button-addon2">
                <div class="p-1"></div>
                <button class="btn btn-outline-dark opacity-50 my-2 my-sm-0 d-inline" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
        <hr />
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-3 ">
                    <div class="col-12  p-2 mb-4 box-shadow">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">

                            <img src="@product.ImgUrl" width="100%" />
                        </a>
                        <div class="">
                            <h6>@product.Brand.Name</h6>
                            <h5>@product.Model</h5>
                            <p>$ @product.Price</p>
                        </div>
                    </div>


                </div>
            }
        </div>
    </div>

</div>



<script type="text/javascript">
    $('.carousel').carousel({
        interval: 2000
    })
</script>