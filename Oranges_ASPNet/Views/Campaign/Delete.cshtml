@model ProductCampaign

@{
    ViewData["Title"] = "Delete";
}






<div class="section-grey">
    <div class="col-md-8 offset-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <left>
                            <h4>Are you sure you want to delete: @Model.Name</h4>
                        </left>
                    </div>
                </div>
                <div>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p class="card-text">
                            <b>Campaign: </b> @Model.Name
                        </p>

                        <p class="card-text">
                            <b>Startdate: </b> @Model.StartDate
                        </p>
                        <p class="card-text">
                            <b>Enddate: </b> @Model.EndDate
                        </p>
                        <p class="card-text">
                            <b>Discount: </b> %@Model.Discount
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group align-bottom">

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
